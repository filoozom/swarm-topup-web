{
	"name": "topup",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview"
	},
	"dependencies": {
		"date-fns": "^2.28.0",
		"ethers": "^5.6.4",
		"preact": "^10.5.15",
		"wagmi": "^0.3.5"
	},
	"devDependencies": {
		"@preact/preset-vite": "^2.1.5",
		"eslint": "^8.14.0",
		"eslint-config-preact": "^1.3.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.4.0",
		"prettier": "^2.6.2",
		"typescript": "^4.5.4",
		"vite": "^2.9.5"
	},
	"eslintConfig": {
		"extends": "preact"
	},
	"eslintIgnore": [
		"dist/*"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"*.{js,jsx,json,ts,tsx,css,md}": [
				"prettier --write",
				"git add"
			]
		},
		"ignore": [
			"node_modules",
			"dist",
			"package-lock.json"
		]
	}
}
